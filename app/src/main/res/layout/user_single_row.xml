<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="5dp"
        card_view:elevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_user_id"
                android:text="User Id : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_user_id"
                android:text="User Id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_id"
                android:layout_below="@id/txt_user_id"
                android:text="Id : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_id"
                android:layout_below="@id/user_id"
                android:text="Id" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:id="@+id/txt_title"
                android:layout_below="@id/txt_id"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:layout_toRightOf="@id/txt_title"
                android:text="Title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_body"
                android:text="Body "
                android:layout_alignBaseline="@+id/body"
                android:layout_alignBottom="@+id/body"
                android:layout_alignEnd="@+id/txt_title"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                android:layout_below="@+id/title"
                android:layout_toEndOf="@+id/txt_body" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>






